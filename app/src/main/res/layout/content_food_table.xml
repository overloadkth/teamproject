<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_food_table" tools:context="com.example.myapp.FoodTableActivity">
            <Button
                android:id="@+id/btn1"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "월"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/btn2"
                android:layout_toStartOf="@+id/btn2"
                android:layout_alignParentLeft="false" />

            <Button
                android:id="@+id/btn2"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "화"
                android:layout_alignBaseline="@+id/btn1"
                android:layout_alignBottom="@+id/btn1"
                android:layout_toLeftOf="@+id/btn3"
                android:layout_toStartOf="@+id/btn3" />

            <Button
                android:id="@+id/btn3"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "수"
                android:layout_alignBaseline="@+id/btn4"
                android:layout_alignBottom="@+id/btn4"
                android:layout_toLeftOf="@+id/btn4"
                android:layout_toStartOf="@+id/btn4" />

            <Button
                android:id="@+id/btn4"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "목"
                android:layout_alignBaseline="@+id/btn5"
                android:layout_alignBottom="@+id/btn5"
                android:layout_toLeftOf="@+id/btn5"
                android:layout_toStartOf="@+id/btn5" />

            <Button
                android:id="@+id/btn5"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "금"
                android:layout_marginRight="76dp"
                android:layout_marginEnd="76dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

</RelativeLayout>